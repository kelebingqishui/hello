/* 顶部沉浸背景 */
.home-header {
  height: 520rpx;
  background: var(--grad-header); /* 引用 app.wxss 全局渐变 */
  position: relative;
  padding: 100rpx 40rpx 0;
  color: #fff;
}

.header-content {
  position: relative;
  z-index: 2;
}

.greeting {
  font-size: 40rpx;
  font-weight: 600;
  display: block;
}

.motto {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
  display: block;
}

/* 顶部宠物小卡片 */
.pet-status-card {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px); /* 磨砂玻璃效果 */
  border-radius: var(--radius-main);
  padding: 30rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.pet-info {
  flex: 1;
  margin-left: 24rpx;
}

.list-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 30rpx 0 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.pet-name {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
}

.pet-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 数据概览卡片 */
.main-content {
  margin-top: -60rpx; /* 向上偏移压在背景上 */
  position: relative;
  z-index: 3;
  padding-bottom: 40rpx;
}

.stats-overview {
  display: flex;
  padding: 40rpx 0;
  margin-bottom: 40rpx !important;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-val {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-main);
  display: block;
}

.stats-label {
  font-size: 24rpx;
  color: var(--text-tips);
}

.divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
  align-self: center;
}

/* 金刚区 */
.quick-nav {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-bottom: 50rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-second);
}

.nav-icon-box {
  width: 110rpx;
  height: 110rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
}

/* 渐变色背景 */
.bg-blue { background: linear-gradient(135deg, #1989fa, #5cadff); }
.bg-green { background: linear-gradient(135deg, #07c160, #39d383); }
.bg-orange { background: linear-gradient(135deg, #ff976a, #ffbb9e); }
.bg-purple { background: linear-gradient(135deg, #7232dd, #9d73e6); }

/* 列表区 */
.recent-section {
  padding: 0 32rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.more {
  font-size: 24rpx;
  color: var(--text-tips);
  font-weight: normal;
}

.expend-amount {
  color: var(--color-danger) !important;
  font-weight: 600;
}