/* pages/protocol/protocol.wxss */
.container {
  padding: 40rpx;
  background-color: #ffffff;
  line-height: 1.6;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.content-view {
  font-size: 28rpx;
  color: #666;
  padding-bottom: 120rpx;
}

/* 针对富文本中的加粗标签进行样式定义 */
.protocol-text b, .protocol-text strong {
  color: #000;
  font-weight: bold;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-top: 1rpx solid #eee;
}

.btn-confirm {
  background-color: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 30rpx;
}